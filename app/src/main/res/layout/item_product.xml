<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="2dp"
    android:paddingVertical="6dp">

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:maxLines="2"
        android:minEms="10"
        android:padding="6dp"
        android:textColor="@color/white"
        tools:text="Shakar" />

    <TextView
        android:id="@+id/with_chiqit_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="2"
        android:minEms="7"
        android:padding="6dp"
        android:textColor="@color/white"
        tools:text="15" />

    <TextView
        android:id="@+id/without_chiqit_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="2"
        android:minEms="7"
        android:padding="6dp"
        android:textColor="@color/white"
        tools:text="24" />

    <TextView
        android:id="@+id/protein_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="2"
        android:minEms="7"
        android:padding="6dp"
        android:textColor="@color/white"
        tools:text="1.54" />

    <TextView
        android:id="@+id/oil_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="2"
        android:minEms="7"
        android:padding="6dp"
        android:textColor="@color/white"
        tools:text="0.15" />

    <TextView
        android:id="@+id/carbohydrate_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="2"
        android:minEms="7"
        android:padding="6dp"
        android:textColor="@color/white"
        tools:text="10.18" />

    <TextView
        android:id="@+id/ccal_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="2"
        android:minEms="7"
        android:padding="6dp"
        android:textColor="@color/white"
        tools:text="10.18" />

</LinearLayout>